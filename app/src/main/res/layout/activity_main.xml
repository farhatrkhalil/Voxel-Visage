<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    tools:context="com.voxelvisage.modelviewer.MainActivity">

    <TextView
        android:id="@+id/fpsCounter"
        android:layout_width="92dp"
        android:layout_height="56dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/floating_button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="FPS: 0"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/actionButton"
        app:layout_constraintEnd_toStartOf="@+id/actionButton"
        app:layout_constraintTop_toTopOf="@+id/actionButton"
        app:layout_constraintVertical_bias="0.54"
        tools:ignore="HardcodedText,SmallSp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shareDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:backgroundTint="#C3AA14"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toTopOf="@+id/actionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/actionButton"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/share_download"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:backgroundTint="#C3AA14"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toTopOf="@+id/shareDownload"
        app:layout_constraintStart_toStartOf="@+id/shareDownload"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/add"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:backgroundTint="#C3AA14"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_google_cardboard"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:backgroundTint="#C3AA14"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/actionButton"
        app:layout_constraintEnd_toStartOf="@+id/actionButton"
        app:layout_constraintTop_toTopOf="@+id/actionButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/filters"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
